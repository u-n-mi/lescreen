<!-- http://localhost:3000/interviews/1/videos/1 -->

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3>Add a review </h3>
      <%= simple_form_for [@video, @review], url:  interview_video_reviews_path(@interview, @video), method: :post do |f| %>
      <div class="form-inputs">
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate the candidate" %>
        <%= f.input :comment %>
      </div>
      <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-primary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>


